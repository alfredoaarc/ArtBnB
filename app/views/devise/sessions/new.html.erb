<div class="container">
<div class="row">
<div class="col-md-6 col-sx-12 w-100">
<div class="mt-5">
<h1>Sign in your account</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
   <%= f.button :submit, "Log in", class: "btn btn-primary mb-4" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<div class="col-md-6 col-sx-12 w-100">
<img src='https://res.cloudinary.com/novapixels/image/upload/v1637327662/ArtBnB/gif-search_lcmk2w.gif'>
<div>
</div>
</div>
