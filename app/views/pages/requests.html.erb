<div class="container">
  <h1>My Requests</h1>
  <% @requests.each do |request| %>
    <div class="card mb-3" style="max-width: 900px;" >
      <div class="row g-0" style="height: 100%">
        <div class="col-md-4">
          <%= cl_image_tag request.artwork.photo.key, class: 'img-fluid rounded-start', id: 'img-card-requests' %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title"><%= request.artwork.title %></h3>
            <p class="card-text">Was requested by <%= request.user.name %></p>
            <p class="card-text"><small class="text-muted">From <%= @requests[0].start_time %></p>
            <p>to <%= @requests[0].end_time %></small></p>
            <ul style="list-style: none">
              <li class="nav-item ml-2 mr-3">
               <a class="btn btn-primary" href="/requests/">Accept</a>
              </li>
             <li class="nav-item active">
                <a class="nav-link" href="/requests/">Decline</a>
            </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
